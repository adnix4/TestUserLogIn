@page
@model TestUserLogIn.Pages.Members.SelectInterestsModel
@{
	ViewData["Title"] = "Select Interests";
}

<h2 class="mb-4">Select the areas and Items that interest you most.</h2>

<div class="card shadow-sm mb-4" id="introBlock">
    <div class="card-body">
        <h5>
            Serve one another, each according to the gift he has received, as good stewards of the many forms of God's grace.
            If anyone speaks, let him do it as one speaking the messages of God. If anyone serves, let him do it as one
            serving with the strength God supplies so that God may be glorified in every way through Jesus Christ. To him belong
            the glory and the power forever and ever. Amen.
        </h5>
        <div class="citedVerse">&minus; Peter 4:10,11</div>
    </div>
</div>

<form method="post">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row">
                @foreach (var interest in Model.AllInterests)
                {
                    <div class="col-md-6 mb-2">
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SelectedInterestIds"
                                   value="@interest.InterestAreaID"
                                   id="interest_@interest.InterestAreaID"
                                   @(Model.SelectedInterestIds.Contains(interest.InterestAreaID) ? "checked" : "") />
                            <label class="form-check-label fw-semibold" for="interest_@interest.InterestAreaID">
                                @interest.InterestArea
                            </label>
                            @if (!string.IsNullOrEmpty(interest.Description))
                            {
                                <div class="text-muted small">@interest.Description</div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-save"></i> Save My Interests
    </button>
</form>