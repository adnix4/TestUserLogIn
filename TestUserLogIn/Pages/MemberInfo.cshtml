@model TestUserLogIn.Pages.MemberInfoModel
@{
	ViewData["Title"] = "Member Role";
}
@if (Model.Roles.Count > 1)
{
	<h2 class="mb-4">Member Roles</h2>
}
else
{
	<h2 class="mb-4">Member Role</h2>
}

<div class="card shadow-sm mb-4">
	<div class="card-body">
