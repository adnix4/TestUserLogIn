@page 
@model TestUserLogIn.Pages.Admin.EditUserRolesModel
@{
	ViewData["Title"] = "Edit User Roles";
}

<h2>Edit Roles for @Model.CurrentUser.Email</h2>

<form method="post" class="align-content-md-stretch">
	@foreach (var role in Model.Roles)
	{
		<div>
			<input type="checkbox" name="selectedRoles" value="@role.RoleName" @(role.Selected ? "checked" : "") />
			<label>@role.RoleName</label>
		</div>
	}

	<button type="submit" class="btn btn-primary">Save Changes</button>
	<a asp-page="/Admin/UserRoles" class="btn btn-secondary">Cancel</a>
</form>
