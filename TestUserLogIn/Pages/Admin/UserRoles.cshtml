@page
@model TestUserLogIn.Pages.Admin.UserRolesModel
@{
    ViewData["Title"] = "User Roles";
}

<h2 class="mb-4">Member Permission Management</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title">User Roles</h4>
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 20%">Name</th>
                    <th style="width: 20%">Email</th>
                    <th style="width: 40%">Roles</th>
                    <th style="width: 20%" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.UsersWithRoles.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted">No users found.</td>
                    </tr>
                }
                else
                {
                    @foreach (var user in Model.UsersWithRoles)
                    {
                        <tr>
                            <td>@($"{user.FirstName} {user.LastName}")</td>
                            <td>@user.Email</td>
                            <td>
                                <ul class="mb-0 ps-3">
                                    @foreach (var role in user.Roles)
                                    {
                                        <li>@role</li>
                                    }
                                </ul>
                            </td>
                            <td class="text-center">
                                <a asp-page="/Admin/EditUserRoles" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit Permissions
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>