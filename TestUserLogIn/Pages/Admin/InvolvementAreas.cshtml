@page
@model TestUserLogIn.Pages.Admin.InvolvementAreasModel
@{
    ViewData["Title"] = "Involvement Areas";
}
<h2 class="mb-4">Involvement Areas</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<!-- Add New Involvement Area -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title">Add New Area</h4>
        <form method="post">
            <div class="mb-3">
                <label asp-for="NewInvolvementArea.AreaOfInvolvement" class="form-label"></label>
                <input asp-for="NewInvolvementArea.AreaOfInvolvement" class="form-control" />
                <span asp-validation-for="NewInvolvementArea.AreaOfInvolvement" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewInvolvementArea.Description" class="form-label"></label>
                <textarea asp-for="NewInvolvementArea.Description" class="form-control" rows="2"></textarea>
                <span asp-validation-for="NewInvolvementArea.Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Area
            </button>
        </form>
    </div>
</div>

<!-- Tabs for Active / Inactive -->
<ul class="nav nav-tabs mb-3" id="areaTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button" role="tab">
            Active Areas
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="inactive-tab" data-bs-toggle="tab" data-bs-target="#inactive" type="button" role="tab">
            Inactive Areas
        </button>
    </li>
</ul>

<div class="tab-content">
    <!-- Active Areas -->
    <div class="tab-pane fade show active" id="active" role="tabpanel">
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%">Involvement Area</th>
                            <th style="width: 50%">Description</th>
                            <th style="width: 25%" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.InvolvementAreasList.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">No active involvement areas found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var area in Model.InvolvementAreasList.Where(a => a.IsActive))
                            {
                                if (Model.EditInvolvementArea != null && Model.EditInvolvementArea.InvolvementAreaID == area.InvolvementAreaID)
                                {
                                    <!-- Inline Edit Row -->
                                    <form method="post" asp-page-handler="SaveEdit">
                                    <tr class="table-warning">
                                        
                                            <input type="hidden" asp-for="EditInvolvementArea.InvolvementAreaID" />
                                            <td>
                                                <input asp-for="EditInvolvementArea.AreaOfInvolvement" class="form-control" required />
                                                <span asp-validation-for="EditInvolvementArea.AreaOfInvolvement" class="text-danger"></span>
                                            </td>
                                            <td>
                                                <textarea asp-for="EditInvolvementArea.Description" class="form-control" rows="2"></textarea>
                                                <span asp-validation-for="EditInvolvementArea.Description" class="text-danger"></span>
                                            </td>
                                            <td class="text-center">
                                                <button type="submit" class="btn btn-success btn-sm me-2">
                                                    <i class="bi bi-check-circle"></i> Save
                                                </button>
                                        
                                                <form method="post" asp-page-handler="CancelEdit" class="d-inline">
                                                    <button type="submit" class="btn btn-secondary btn-sm">
                                                        <i class="bi bi-x-circle"></i> Cancel
                                                    </button>
                                                </form>
                                            </td>
                                    </tr>
                                    </form>
                                }
                                else
                                {
                                    <!-- Normal Row -->
                                    <tr>
                                        <td>@area.AreaOfInvolvement</td>
                                        <td>@area.Description</td>
                                        <td class="text-center">
                                            <form method="post" asp-page-handler="Edit" asp-route-id="@area.InvolvementAreaID" class="d-inline">
                                                <button type="submit" class="btn btn-warning btn-sm me-1">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </button>
                                            </form>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@area.InvolvementAreaID" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Inactive Areas -->
    <div class="tab-pane fade" id="inactive" role="tabpanel">
        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 25%">Involvement Area</th>
                            <th style="width: 50%">Description</th>
                            <th style="width: 25%" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.InvolvementAreasList.Any(a => !a.IsActive))
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">No inactive involvement areas found.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var area in Model.InvolvementAreasList.Where(a => !a.IsActive))
                            {
                                <tr class="table-light">
                                    <td>@area.AreaOfInvolvement</td>
                                    <td>@area.Description</td>
                                    <td class="text-center">
                                        <form method="post" asp-page-handler="Reactivate" asp-route-id="@area.InvolvementAreaID" class="d-inline">
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="bi bi-arrow-counterclockwise"></i> Reactivate
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
